<h1>Find a word</h1>
<p>make your choice in the 10 letters behind</p>
<ul>
  <% @ten_letters_list.split('').each do |letter| %>
    <li>
      <%= letter %>
    </li>
  <% end %>
</ul>
<%= simple_form_for [:game, @party] do |f| %>
  <%= f.input :ten_letters_list, as: :hidden, input_html: { value: @ten_letters_list } %>
  <%= f.input :word %>
  <%= f.button :submit, class: 'btn btn-danger' %>
<% end %>

